//- Strip out everything but word characters
if title
  - var titleID = title.replace(/[^\w]/g, '');
  - var titleID = titleID.toLowerCase();
nav.top-nav(id=titleID)
  .container
    .nav-wrapper
      a.page-title(href='/')= title
  #small-menu.container
    a#small-menu-icon.button-collapse(href="#" data-activates='nav-mobile')
      i.material-icons.white-text menu
    if (userInfo)
      ul#nav-mobile.side-nav
        li
          a(href='/users/' + userInfo.username) User settigns
        li
          a.valign-wrapper(href='/locations') Locations
        li
          a.valign-wrapper(href='/tools') Tools
        li
          a.valign-wrapper(href='/people') People
        li
          a.valign-wrapper(href='/categories') Categories
        li
        a.valign-wrapper(href='/users') Users
