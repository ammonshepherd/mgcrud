include head.pug

body.brown
  #login-container.row
    .col.s4
    .col.s4
      #login-card.card-content.z-depth-5.grey.lighten-4
        h2.card-title Login
        section.loginform
          form(name="login" action="/auth/login" method="post" accept-charset="utf-8")
            if message
              .card-panel.green.accent-1= message
            if error
              .card-panel.red.accent-1= error
            ul
              li 
                label(for="username") Username
                input.fields(type="text" name="username" required autofocus)
              li
                label(for="password") Password
                input.fields(type="password" name="password" required)
              li
            .card-action
              input.btn.green.waves-effect.waves-light(type="submit" value="Login")
        p
          a(href='/register') Register
          |
          | |
          |
          a(href='/auth/reset') Forgot Password?
    .col.s4
